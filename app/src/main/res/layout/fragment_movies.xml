<?xml version="1.0" encoding="utf-8"?>
<androidx.viewpager.widget.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager_movies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.movies.MoviesFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_movies_planned" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_movies_in_progress" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_movies_finished" />
    </com.google.android.material.tabs.TabLayout>
</androidx.viewpager.widget.ViewPager>